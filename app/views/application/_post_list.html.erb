    <% @posts.each do |post| %>
    <tr>
      <td><span class="badge"> <%= post.replies_count %> </span></td>
      <td> <%= link_to post.title, post_path(post) %></td>
      <td></td>
      <td> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= post.view_count %></td>
    </tr>
    <% end %>
  </tbody>
</table>

