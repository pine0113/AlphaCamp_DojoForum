<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <%= link_to "SiteName", root_path, class: "navbar-brand" %>
          </div>

          
          <!-- Collect the nav links, forms, and other content for toggling -->

          <div class="collapse navbar-collapse">

              <ul class="nav navbar-nav">
              <li class="active"><a href="#">Feeds</a></li>
              <li><a href="#">All Post</a></li>
              <li><a href="#">New Post</a></li>
             </ul>



            
           <ul class="nav navbar-nav navbar-right">
          
            <% if current_user %>
              <li>  <%= link_to( image_tag(current_user.avatar, width: '32') , edit_user_path(current_user)) %> </li>
                <% if current_user.admin? %>
                  <li><%= link_to('Admin', admin_tweets_path) %> </li>
                <% end %>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %> </li>
              <!-- <li><%= link_to('修改密碼', edit_user_registration_path) %></li> -->
           <% else %>
              <li><%= link_to('Sign Up', new_user_registration_path) %> </li>
              <li><%= link_to('Login', new_user_session_path) %> </li>
           <% end %>
          </ul>
          
          </div><!-- /.navbar-collapse -->


        </div><!-- /.container-fluid -->
      </nav>
    <div class="container">
      <div class="row">

            


    <%= yield %>
  
  </div>

  </body>
</html>
