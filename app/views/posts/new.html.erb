
<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title",  class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, placeholder: "Content",  class: "form-control" %>
  </div>


  <div class="form-group">
      <input type="file" id="exampleInputFile">
  </div>


  <div class="form-group">
  Who Can See
    <label>  <%= f.radio_button  :access,  'All' %> All </label>
    <label>  <%= f.radio_button  :access,  'Friend' %> Friend </label>
    <label>  <%= f.radio_button  :access,  'My self' %> My self </label>
  </div>


  <div class="form-group">
  Category
    <%= f.collection_select :category_ids, @categories, :id, :name, {}, 
    {:multiple => true} %>
   
  </div>

  <div class="form-group">
  Status
  

  </div>

  <button class="btn btn-default">Save Draft</button>
  <%= f.submit "Submit", class: "btn btn-primary" %>
    <% if @post.errors.any? %>
  <%= @post.errors.full_messages.to_sentence %>
  <% end %>
<% end %>

</div>


<br>




