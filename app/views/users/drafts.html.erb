<%= render :partial => "info" %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status <th>
      <th>Last reply at</th>
      <th>Viewed Count </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td> <%= link_to post.title, post_path(post) %></td>
      <td> <%= post.status %></td>
      <td> <%=  time_ago_in_words(post.last_reply.created_at)  unless post.last_reply.nil? %></td>
      <td> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= post.hits %></td>
    </tr>
    <% end %>
  </tbody>
</table>
